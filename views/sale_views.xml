<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_order_form_inherited" model="ir.ui.view">
            <field name="name">view.order.form.inherited</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='order_line']/form/group/group/field[@name='product_id']" position="attributes">
                    <attribute name="domain">[('sale_ok', '=', True),'|',('partner_id','=',parent.partner_id),('type','=','service'), '|', ('company_id', '=', False), ('company_id', '=', parent.company_id)]</attribute>
                </xpath>
                <xpath expr="//field[@name='order_line']/tree/field[@name='product_id']" position="attributes">
                    <attribute name="domain">[('sale_ok', '=', True),'|',('partner_id','=',parent.partner_id),('type','=','service'), '|', ('company_id', '=', False), ('company_id', '=', parent.company_id)]</attribute>
                </xpath>
            </field>
        </record>

    </data>
</odoo>
